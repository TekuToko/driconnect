<%# cssは商品出品のものを併用しています。
app/assets/stylesheets/items/new.css %>
<%= render "shared/header" %>
<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>
    <%= form_with model:@around, local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー登録
    </h1>
  </div>
  <div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>倉庫名</label>
    <span class='must'>必須</span>
  </div>
  <%= f.text_area :a_name, class:"input-default", id:"nickname", placeholder:"トラック乙女", maxlength:"10" %>
</div>

<div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>郵便番号</label>
    <span class='must'>必須</span>
  </div>
  <%= f.text_area :a_postnum, class:"input-default", id:"email", placeholder:"111@111" %>
</div>

<div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>住所（都道府県）</label>
    <span class='must'>必須</span>
  </div>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
</div>

<div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>住所</label>
  </div>
  <%= f.text_area :a_address, class:"input-default",id:"user-detail" %>
</div>


  <div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>電話番号</label>
  </div>
  <%= f.text_area :a_phone, class:"input-default",id:"user-detail" %>
</div>

  <div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>開始時間</label>
  </div>
  <%= f.text_area :a_start_time, class:"input-default",id:"user-detail" %>
</div>

  <div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>終了時間</label>
  </div>
  <%= f.text_area :a_close_time, class:"input-default",id:"user-detail" %>
</div>

  <div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>ルール</label>
  </div>
  <%= f.text_area :a_rule, class:"input-default",id:"user-detail" %>
</div>


  <div class='form-group'>
  <div class='form-group-text'>
    <label class='column-name'>ルール</label>
  </div>
  <%= f.text_area :a_other, class:"input-default",id:"user-detail" %>
</div>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"sell-btn" %>

    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>


</div>